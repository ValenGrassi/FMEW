---
import Layout from "../../layouts/Layout.astro"
import Footer from "../../layouts/Footer.astro"
import '@fontsource/playfair-display';
import { Image } from "astro:assets";
import niños from "../../assets/7 (1).jpg" 
import {Premio} from "../../components/react/Premio"
---

<Layout title="Premio - FMEW">
    <div class="my-20 md:mt-0 mx-10 lg:mx-0">
        <h1 class="text-center font text-4xl">Premio infantil Fundación María Elena Walsh</h1>
        <div class="m-auto flex flex-col md:flex-row justify-center items-center w-full lg:w-2/3 my-8 gap-20">
            <div>
                <Image class="w-[45rem]" alt="premio fmew" src={niños} /> 
            </div>
            <div class="flex flex-col gap-4">
                <Premio año={"Premio 2023"} title=" - JIN B Escuela 15 D.E. 3" title2=" - Escuela Leandro N. Alem Nº 218" client:idle />
                <!-- <Premio año={"Premio 2023 -"} title=" Categoría 6 y 7 años" client:idle /> -->
            </div>
        </div>
    </div>
    <Footer/>
</Layout>
<style>
    .font{
        font-family: "playfair display", sans-serif;
    }
    .premio-info {
        opacity: 0;
        transition: opacity 0.5s ease;
    }
    .premio-info.active {
        opacity: 1;
    }
</style>